!!! html5
%html
  %head
    = stylesheet_link_tag '960','reset','text','global','forms'
    %title Skooah 

    %body
      #container.container_12
        #header
          %a{"href" => "/"}
            %img{"src" => "/images/layout/logo.png"}
          
          %ul#user-options
            %li
              %a{"href" => "/about"}
                About Us
            
            - if user_signed_in?
              %li
                Manage Profile | 
              %li
                %a{"href" => "/users/sign_out"} 
                  Logout
            - else
              %li
                %a{"href" => "/users/sign_up"}
                  Sign Up
              %li
                %a{"href" => "/users/sign_in"}
                  Login
          
        #main 
          %p.notice= notice
          %p.alert= alert
        
          = yield

%h1 Login

- form_for(resource, :as => resource_name, :url => "/users/sign_in") do |f|
  .form-element
    = f.label :email
    = f.email_field :email

  .form-element
    = f.label :password
    = f.password_field :password

  .form-checkbox
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me

  = image_submit_tag "/images/buttons/login.png"